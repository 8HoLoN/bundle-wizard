{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["src", "tests"],
  "exclude": ["src/vendor", "tests/data", "tests/generate-data"]
}
